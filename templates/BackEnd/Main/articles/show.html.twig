{% extends 'BackEnd/base_admin.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="{{ asset('BackEnd/assets/css/vendors/sweetalert2.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('BackEnd/assets/css/vendors/datatables.css') }}">
{% endblock %}



{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-10 offset-md-1">
            <div class="card">
                <div class="card-header">
                    <h5> Articles </h5>
                    <span>Supprimer un articles</span>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>

                        <tr>
                            <th>Titre</th>
                            <td>
                                {% if article.categories.id == 8 %}
                                    {{article.contenu | slice(0, 150)}}....
                                {% else %}
                                    {{ article.titre }}
                                {% endif %}
                            </td>
                        </tr>

                        <tr>
                            <th>Date</th>
                            <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>

                        <tr>
                            <th>Imagesprincipale</th>
                            <td>{{ article.imagesprincipale }}</td>
                        </tr>
                        {#            <tr>#}
                        {#                <th>Slug</th>#}
                        {#                <td>{{ article.Slug }}</td>#}
                        {#            </tr>#}
                        </tbody>
                    </table>
                    <div class="container mt-10">
                        <div class="row">
                            <div class="col-md-4">
                                <a href="{{ path('admin_articles_index') }}">retour Ã  la liste des articles </a>

                            </div>
                            <div class="col-md-4">
                                <a href="{{ path('admin_articles_edit', {'id': article.id}) }}">Modifier</a>
                            </div>
                            <div class="col-md-4">
                                {{ include('BackEnd/Main/articles/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







{% endblock %}
