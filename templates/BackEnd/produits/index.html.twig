{#                                                <a href="{{ path('admin_produits_edit', {'id': produit.id}) }}">Supprimer</a>#}
                                                <button class="btn btn-danger btn-xs" type="button" data-original-title="btn btn-danger btn-xs" title="" data-bs-original-title=""><a href="{{ path('admin_produits_edit', {'id': produit.id}) }}" style="color: #ffffff; font-size: 11px">Supprimer</a></button>
                                                <button class="btn btn-success btn-xs"  type="button" data-original-title="btn btn-danger btn-xs" title="" data-bs-original-title="">  <a href="{{ path('admin_produits_edit', {'id': produit.id}) }}" style="color: #ffffff; font-size: 11px">Modifier</a></button>
                                            </td>
                                        </tr>


                                    {% else %}
                                        <tr>
                                            <td colspan="7">Pas de produits !</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                                <a class="btn btn-outline-success m-r-10 m-t-25" href="{{ path('admin_produits_new') }}">
                                    <i class="fa fa-plus me-1"></i>Ajouter un produit
