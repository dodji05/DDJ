{% block  content %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-10 offset-md-1">
                <div class="card">
                                        <div class="card-header">
                                            <h5>Liste des produits </h5><span>lorem ipsum dolor sit amet, consectetur adipisicing elit</span>
                                        </div>
                    <div class="card-body">
                        <div class="table-responsive">
